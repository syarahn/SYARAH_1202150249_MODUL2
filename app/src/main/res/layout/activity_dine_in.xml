<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gl552vw.syarah_1202150249_modul2.DineInActivity">

    <TextView
        android:id="@+id/header_dine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:text="Detail Customer"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/eText_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@+id/header_dine"
        android:hint="Name"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textMeja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45dp"
        android:text="Nomor Meja: "
        android:layout_below="@+id/eText_name"/>

    <Spinner
        android:id="@+id/label_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eText_name"
        android:layout_toRightOf="@+id/textMeja">

    </Spinner>

    <Button
        android:id="@+id/btn_menuDine"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Pilih Pesanan"
        android:layout_below="@id/label_spinner"
        android:layout_centerHorizontal="true"
        android:onClick="btn_menuDine"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffff"/>
</RelativeLayout>
